<%= form_tag movies_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query], #esta linea lo que hace es coger los parametros que mandamos al escribir la movie que queremos
    class: "form-control",
    placeholder: "Find a movie"
  %>
<% end %>


<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div id="movies">
        <% @movies.each do |movie| %>
          <h4><%= movie.title %></h4>
          <p><%= movie.syllabus %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>


